 {{#each courses}}


   <div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <a href="/courses/{{this.slug}}">
      <img src="{{this.img}}" class="img-fluid rounded-start" alt="...">
      </a>
      
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/courses/{{this.slug}}"><h5  class="card-title">{{this.name}}</h5></a>
        <a href="/courses/{{this.slug}}"><p class="card-text">{{this.description}}</p></a>
        <p class="card-text"><small class="text-muted">Last updated {{this.updateAt}} </small></p>
      </div>
    </div>
  </div>
</div>


  {{/each}}